<?xml version="1.0" encoding="utf-8"?>
<resources>




    <style name="MyCustomTextStyle">
        <item name="android:textColor">#9C27B0</item>
        <item name="android:textSize">18sp</item>
        <!-- Dodaj inne atrybuty stylu -->
    </style>



    <style name="NavigationViewTextStyle">
        <item name="android:textSize">18sp</item> <!-- Ustaw wielkość tekstu -->
        <item name="android:textStyle">bold</item> <!-- Ustaw czcionkę bold -->
        <item name="android:paddingLeft">16dp</item> <!-- Ustaw wciecie z lewej strony -->
    </style>

    <style name="MyMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemTextAppearance">@style/MyMenuItemStyle</item>
        <!-- Dodaj inne atrybuty stylu menu, jeśli potrzebujesz -->
    </style>


    <style name="MyMenuItemStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#9C27B0</item>
        <!-- Dodaj inne atrybuty stylu tekstu, jeśli są potrzebne -->
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#6EFF5E</item>
        <item name="android:radius">50dp</item> <!-- Ustaw odpowiednią wartość promienia -->
    </style>



</resources>